<form class="flex flex-col gap-2.5"
      hx-post='{{ "/login" }}'
      method="post"
      hx-target="#notification-error"
      hx-swap="beforeend">
  <div class="w-96">
    <label class="label label-text">Email</label>
    <input type="email" name="email" class="input peer" />
    <span class="label">
      <span class="label-text-alt">Enter your email address</span>
    </span>
  </div>
  <div class="w-96">
    <label class="label label-text">Password</label>
    <input type="password" name="password" class="input peer" />
    <span class="label">
      <span class="label-text-alt">Enter your password</span>
    </span>
  </div>
  <div class="w-96 flex flex-row items-center justify-between">
    <div class="flex flex-row items-center gap-1.5">
      <input type="checkbox" name="rememberMe" class="checkbox checkbox-xs" />
      <label class="label label-text">Remember me</label>
    </div>
    <a href='{{ "/forgot-password" }}' class="hover:underline text-sm text-base-content/80">Forgot your password?</a>
  </div>
  <button class="btn btn-primary w-full" type="submit">Sign in</button>
</form>
