{% block alert %}
  <div x-data="{show:true}">
    <div x-show="show"
         x-transition:leave="transition transform ease-in duration-300"
         x-transition:leave-start="opacity-100 translate-x-0"
         x-transition:leave-end="opacity-0 translate-x-5"
         class="alert alert-soft {% match alert_type %} {% when AlertNotificationType::Info %} alert-info {% when AlertNotificationType::Error %} alert-error {% endmatch %} flex items-center gap-4"
         role="alert">
      <div>
        <h5 class="text-md font-semibold">{{ title }}</h5>
        <p>{{ message }}</p>
      </div>
      <button x-on:click="show = false" class="ms-auto leading-none">
        <span class="icon-[tabler--x] size-5"></span>
      </button>
    </div>
  </div>
{% endblock alert %}
